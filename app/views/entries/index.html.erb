<% @page_title = "作品一覧" %>
<h1><%= @page_title %></h1><br>

<div class="entries">
  <% if @entries.present? %>
    <% @entries.each do |entry| %>
      <h2 class="entries__title"><%= entry.title %></h2>
      <p class="entries__entry"><%= truncate(entry.body, length: 80) %>
      <%= link_to "もっと読む", entry %></p>
    <%= render "footer", entry: entry %>
  <% end %>
</div>
  <%= paginate @entries %>
<% else %>
  <p>記事がありません。</p>
<% end %>
