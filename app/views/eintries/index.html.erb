<% @page_title = "作品一覧" %>
<h1 class="pr-title"><%= @page_title %></h1><br>

<% if current_member %>
  <div class="entry-new"><%= link_to "ブログ記事の作成", :new_entry %></div>
<% end %><br>

<% if @entries.present? %>
  <% @entries.each do |entry| %>
    <h2 class="entry-title"><%= entry.title %></h2>
    <p class="entry-content"><%= truncate(entry.body, length: 80) %>
    <%= link_to "もっと読む", entry %></p>
  <%= render "footer", entry: entry %>
  <% end %>
    <%= paginate @entries %>
  <% else %>
    <div class="no-eintries">記事がありません。</div>
<% end %>
