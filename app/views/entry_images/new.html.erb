<% @page_title = "ブログ記事への画像追加" %>
<h1><%= @page_title %></h1>

<div class="entries__show">
  <h2 class="entries__title"><%= @entry.title %></h2>
</div>

<% url = entry_images_path(@entry, @image) %>
<%= form_for @image, as: "image", url: url do |form| %>
  <%= render "form", form: form %>
  <div class="btn-blue"><%= form.submit '登録', class: 'btn btn-primary' %></div>
<% end %>
