<%= render "shared/errors", obj: @image %>

<table class="image-table" border="1">
  <tr>
    <th class="image-label"><%= form.label :new_data %></th>
    <td class="image-field"><%= form.file_field :new_data, :class => "file-field" %></td>
  </tr>
  <tr>
    <th class="image-label"><%= form.label :alt_text %></th>
    <td class="image-field"><%= form.text_field :alt_text, size: 40 %></td>
  </tr>
</table>
