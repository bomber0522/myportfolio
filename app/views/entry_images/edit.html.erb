<% @page_title = "ブログ記事の画像編集" %>
<h1><%= @page_title %></h1>

<div class="entries__show">
  <h2 class="entries__title"><%= @entry.title %></h2>
</div>

<% url = entry_image_path(@entry, @image) %>
<%= form_for @image, as: "image", url: url do |form| %>
  <%= render "form", form: form %>
  <div class="btn-blue"><%= form.submit '更新', class: 'btn btn-primary' %></div>
<% end %>
